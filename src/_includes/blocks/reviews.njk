{% macro reviewBlock(quote, author, url) %}
  <div class="mb-5">
    <div class="box mb-4">
      <p>{{ quote | safe }}</p>
    </div>
    <div class="level is-mobile">
      <div class="level-left">
        <div class="level-item">
          <a href="{{ url }}" target="_blank">
            <p>{{ author | safe }}</p>
          </a>
        </div>
      </div>
      <div class="level-right">
        <div class="level-item">★★★★★</div>
      </div>
    </div>
  </div>
{% endmacro %}